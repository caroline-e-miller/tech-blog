<!-- Loop over each blog in the blogs array -->
{{#each blogs as |blog| }}
<div class="row mb-4 blog">
    <div class="col-md-5">
        <h2>
            <!-- Call helper function with triple brackets to render the emoji span as HTML -->
            {{!-- {{{get_emoji}}} --}}
            <a href="/blog/{{blog.id}}">{{blog.title}}</a>
        </h2>
        <p>
            {{!-- <span for="img" aria-label="money">ðŸ’²</span> --}}
            <!-- Pass needed_funding value to the helper function -->
            <span class="blog-body">{{blog.post_body}}</span>
        </p>
        <p>Created by {{blog.user.name}} on {{format_date blog.date_created}}</p>
    </div>
</div>
</div>
{{/each}}