<div class="text-center">
    <h2>{{title}}</h2>
    <p>{{post_body}}</p>
    <p>Written by {{user.name}} on {{format_date date_created}}</p>

    <form class="form new-comment-form" blog-id="{{id}}">
        <div class="form-group">
            <label for="post-title" comment-id="{{id}}">Comment:</label>
            <input class="form-input" type="text" id="comment-body" name="comment-body" />
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Post</button>
        </div>
    </form>
    <div class="col-md-6 comment-list">
        <h1>Comments</h1>

        {{#if comments.length}}
        {{#each comments as |comment|}}
        <div class="row mb-2">
            <div class="card">
                <p><a href="/comment/{{comment.id}}">{{comment.comment_body}}</a></p>
            </div>
            <button class="btn btn-sm btn-danger" comment-data-id="{{comment.id}}">Delete comment</button>
        </div>
        {{/each}}
        {{/if}}
    </div>
</div>

<script src="../js/blog.js"></script>