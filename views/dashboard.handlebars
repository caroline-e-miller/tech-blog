<div class="row">
    <div class="col-auto">
        <h2>Welcome, {{name}}!</h2>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-6">
        <h3>Write a new post:</h3>

        <form class="form new-blog-form">
            <div class="form-group">
                <label for="post-title">Title:</label>
                <input class="form-input" type="text" id="blog-name" name="blog-name" />
            </div>
            <div class="form-group">
                <label for="blog-desc">Body:</label>
                <textarea class="form-input" id="blog-body" name="blog-body"></textarea>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Publish</button>
            </div>
        </form>
    </div>

    <div class="col-md-6 blog-list">
        <h3>My Blog Posts:</h3>
        {{#if blogs.length}}
        {{#each blogs as |blog|}}
        <div class="row mb-2">
            <div class="card">
                <h4><a href="/blog/{{blog.id}}">{{blog.title}}</a></h4>
                <p><a href="/blog/{{blog.post_body}}"></a></p>
            </div>
            <button class="btn btn-sm btn-danger" blog-data-id="{{blog.id}}">Erase</button>
        </div>
        {{/each}}
        {{/if}}
    </div>

    {{!-- {{#if comments.length}}
